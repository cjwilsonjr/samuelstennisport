= form_for(:user, url: signup_path) do |f|
  = f.label :first_name
  = f.text_field :first_name
  = f.label :last_name
  = f.text_field :last_name
  = f.label :email
  = f.email_field :email
  = f.label :password
  = f.password_field :password
  = f.label :admin
  = f.select(:admin, options_for_select({"Yes" => true, "No" => false}))
  = f.submit "Create Account"